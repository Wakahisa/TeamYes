                </li>
                <li>Lesson</li>
                <li>@Html.ActionLink("Resources", "ResourcesView", "Student", null, new { target = "_blank"@*, @class = "btn btn-primary"*@ })</li>
            </ul>
        </div>
    </div>

    <div class="col-sm-9">
        <div class="panel-heading">Lesson</div>
        <div class="panel-body">
            <div id="Display">

            </div>
        </div>
    </div>
</div>


