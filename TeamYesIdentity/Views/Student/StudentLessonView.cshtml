    <div class="col-sm-3">
        @*<div class="panel-heading">Lessons</div>*@
        <div class="panel-body">
            <ul>
                @*<li>
                        @Html.Partial("_StudentLesson1View")
                    </li>*@
                <li>
                    @Ajax.ActionLink("Lesson #1", "LoadStudentLesson1", "Student",
                                new AjaxOptions { UpdateTargetId = "Display", InsertionMode = InsertionMode.Replace })
                </li>
                <li>
                    @Ajax.ActionLink("Lesson #2", "LoadStudentLesson2", "Student",
                                new AjaxOptions { UpdateTargetId = "Display", InsertionMode = InsertionMode.Replace })
                </li>
                <li>
